//the inverse number 
#include <stdio.h>

int main()
{
    int rev, n,res;
    printf("Please enter a number ");
    scanf("%d",&n);
    while(n!=0){
     res=n%10;
     rev=rev*10+res;
     n=n/10;
    
    }
     printf("%d \n",rev);

    return 0;
}
//exponential
#include <stdio.h>

int main()
{
   int i,a,x;
 int  result=1;
   printf("please enter the number then it power");
   scanf("%d %d",&a,&x);
  while(x!=0){
       result=result*a;
       x--;
   }
   printf("%d",result);

    return 0;
}

