//the inverse number 
#include <stdio.h>

int main()
{
    int rev, n,res;
    printf("Please enter a number ");
    scanf("%d",&n);
    while(n!=0){
     res=n%10;
     rev=rev*10+res;
     n=n/10;
    
    }
     printf("%d \n",rev);

    return 0;
}
//exponential
#include <stdio.h>

int main()
{
   int i,a,x;
 int  result=1;
   printf("please enter the number then it power");
   scanf("%d %d",&a,&x);
  while(x!=0){
       result=result*a;
       x--;
   }
   printf("%d",result);

    return 0;
}
//prime number !DO NOT KNOW THE PROBLEM WHERE
#include <stdio.h>

int main()
{
  int i,a,flag=0;
printf("ENTER NUMBER\n");
   scanf("%d",&a);
   printf("%d",a);
   for(i=2;i<=a/2;i++){
       if(a%i==0)
       {
           flag=1;
           break;
            printf(" this flag %d",flag);
       }
       if(a==1){printf("it is special case");}
       else{
           if(flag==1){printf("PRIM");}
           else{printf(" notPRIM");}
       }
   }
   

    return 0;
}
///// cheak the  Armstrong number
#include <stdio.h>

int main()
{
  int a,res,count;
  int result=0;
printf("ENTER NUMBER\n");
   scanf("%d",&a);
   int w=a;
  // printf("%d",a);
   while(a!=0){
     res=a%10;  
     // printf("%d #########",res);
     result +=res*res*res;
     a=a/10;
   }
 // printf("%d",result);
   if(w == result)
        printf("is an Armstrong number.");
    else
        printf(" is not an Armstrong number.");
   

    return 0;
}
