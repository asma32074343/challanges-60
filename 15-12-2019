/******************************************************************************
7)	Write a C program to check if y is greater than x, and z is greater than y from three given integers x,y,z.
*******************************************************************************/

#include <stdio.h>

int main()
{
    int y,x,z;
    int i;
    printf("Please enter x,y,z\n");
    scanf("%d %d %d",&x,&y,&z);
    
    if(y>x && z>y){
    
     printf("true");   
     
    }else {
      
      printf("false");
      
    }
        
    
    return 0;
}
