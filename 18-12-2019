/******************************************************************************
 Write a program in C to find the maximum and minimum element in an array
*******************************************************************************/

#include <stdio.h>

int main()
{
     int  arr[]={1,2,1,4,5,75,89,41,12,36};
     int i;
     int max,min;
     min=arr[0];
       max=arr[0];
  //  int dup=0;
for(i=0;i<10;i++)
{
    if(min>arr[i]){
        min=arr[i];
        
    }
    if(max<arr[i]){
        max=arr[i];
    }
    
}
printf("the max value is %d \n",max);
    printf("the min value is %d",min);

    return 0;
}
/******************************************************************************
  Write a program in C to separate odd and even integers in separate arrays
*******************************************************************************/

#include <stdio.h>

int main()
{
     int  arr[]={1,2,1,4,5,75,89,41,12,36};
     int i,j=0,k=0;
     int odd[9];
     int even[9];
    
for(i=0;i<10;i++)
{
    if(arr[i]%2==0){
     even[k]=arr[i];
     k++;
        
    }
    else{
     odd[j]= arr[i];
     j++;
    }
    
}
printf("the odd are is as fellow:\n");
for(i=0;i<j;i++)
{
    printf("%d ",odd[i]);
    
}
printf(" \n the even are is as fellow:\n");
for(i=0;i<k;i++)
{
    printf("%d ",even[i]); 
}

    return 0;
}
