*  Write a program in C to merge two arrays of same size sorted in decending order
*******************************************************************************/

#include <stdio.h>

int main()
{
     int  arr1[]={1,2,1,4,5};
     int  arr2[]={11,12,3,7,8};
     int arr3[8];
     int i;
    int dup=0;
for(i=0;i<9;i++)
{
    arr3[i]= arr1[i]+arr2[i];
}
    for(i=0;i<9;i++)
{
    printf("%d ",arr3[i]);
}


    return 0;
