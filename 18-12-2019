int main()
{
     int   arr1[]={1,2,1,4,5,6,7,8,9};
     int   arr2[8];
     int i,j;
    int dup=0;
for(i=0;i<9;i++)
{
    arr2[i]= arr1[i];///copying the array
}

for(i=0;i<9;i++)
{
  for(j=0;j<9;j++)
    {
        if( arr1[i]== arr2[j])
        {
            dup=dup+1;
        }
    }
}
printf("%d",dup);
    return 0;
